<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>@ViewData["Title"] - Farmers Market Self Checkout</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/kiosk.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- PWA: manifest and theme color -->
    <link rel="manifest" href="~/manifest.webmanifest" />
    <meta name="theme-color" content="#0b5d1e" />
    
    <!-- PWA: Apple-specific tags -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="FM Kiosk" />
    <link rel="apple-touch-icon" href="~/icons/apple-touch-icon.png" />
    
    <!-- PWA: Favicon -->
    <link rel="icon" type="image/png" sizes="192x192" href="~/icons/icon-192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="~/icons/icon-512.png" />
    
    <!-- PWA: Microsoft tags -->
    <meta name="msapplication-TileColor" content="#0b5d1e" />
    <meta name="msapplication-TileImage" content="~/icons/icon-144.png" />
</head>
<body>
    <div class="kiosk-container">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/kiosk.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
