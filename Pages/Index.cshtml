@page
@model IndexModel
@{
    ViewData["Title"] = "Farmers Market Self Checkout";
    Layout = "_KioskLayout";
}

<a href="/Cart" class="idle-screen">
    <div class="idle-logo">
        <div class="idle-logo-text">
            <img src="~/Logo6.svg" alt="Farmers Market" class="idle-logo-image" />
        </div>
    </div>

    <div class="video-container">
        <video autoplay loop muted playsinline>
            <source src="~/idle.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
    </div>
    
    <!-- Decorative elements -->
    <img src="~/leaf-decoration2.svg" alt="" style="position: absolute; top: 10%; left: 5%; width: 80px; opacity: 0.3;" />
    <img src="~/leaf-decoration2.svg" alt="" style="position: absolute; bottom: 15%; right: 8%; width: 90px; opacity: 0.53;" />
</a>