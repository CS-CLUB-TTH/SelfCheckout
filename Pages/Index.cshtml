@page
@model IndexModel
@{
    ViewData["Title"] = "Farmers Market Self Checkout";
    Layout = "_KioskLayout";
}

<a href="/Cart" class="idle-screen">
    <div class="idle-logo">
        <div class="idle-logo-text">
            <img src="~/Logo6.svg" alt="Farmers Market" class="idle-logo-image" />
        </div>
    </div>

    <div class="video-container">
        <div class="video-placeholder">
            Promotional Video
            <br />
            <small style="font-size: 18px; margin-top: 15px; display: block; font-weight: 500;">
                (Video player will be displayed here)
            </small>
        </div>
    </div>
    
    <!-- Decorative elements -->
    <img src="~/leaf-decoration.svg" alt="" style="position: absolute; top: 10%; left: 5%; width: 80px; opacity: 0.3;" />
    <img src="~/leaf-decoration.svg" alt="" style="position: absolute; bottom: 15%; right: 8%; width: 90px; opacity: 0.25; transform: rotate(180deg);" />
</a>