@page
@model PaymentModel
@{
    ViewData["Title"] = "Payment Processing";
    Layout = "_KioskLayout";
}

<div class="payment-screen">
    <div class="payment-background-graphic">
        <img src="~/Secondary Graphic.svg" alt="" />
    </div>
    <div class="payment-content">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger text-center" role="alert">
                <strong>@Model.ErrorMessage</strong>
            </div>
        }
        
        <div class="payment-icon">
            <img src="~/card-icon.svg" alt="Payment" style="width: 180px; height: 180px; filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.3));" />
        </div>
        <h1 class="payment-title">Payment Processing</h1>
        <div class="payment-amount">AED @Model.Amount.ToString("0.00")</div>
        <p class="payment-instruction">Initiating payment with Magneti terminal...</p>
        
        <div class="payment-terminal">
            <div class="terminal-placeholder">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Processing...</span>
                </div>
                <div class="mt-3">Magneti Payment Gateway</div>
                <small style="font-size: 16px;">Connecting to terminal...</small>
            </div>
        </div>
        
        <p class="payment-instruction" style="font-size: 20px; margin-top: 20px;" id="paymentStatus">
            Processing payment...
        </p>
        
        <form method="post" asp-page-handler="ProcessPayment" id="paymentForm" style="display: none;">
            <button type="submit" class="btn btn-primary">Process Payment</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-submit payment form after short delay to show UI
        document.addEventListener('DOMContentLoaded', function() {
            const statusEl = document.getElementById('paymentStatus');
            const form = document.getElementById('paymentForm');
            
            // Update status
            statusEl.textContent = 'Connecting to Magneti gateway...';
            
            // Auto-submit after 1 second
            setTimeout(function() {
                statusEl.textContent = 'Processing payment...';
                form.submit();
            }, 1000);
        });
    </script>
}
